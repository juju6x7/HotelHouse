{% extends 'base.html.twig' %}

{% block title %}Connexion - HouseHotel
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Déconnexion</a>
			</div>
		{% endif %}
		<div class="row">
			<div class="col-4 mx-auto">
				<h1 class="h3 pt-4 mb-3 text-center">Connectez-vous</h1>

				<label for="inputEmail" class="mb-2">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				<label for="inputPassword" class="mt-4 mb-2">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																	        See https://symfony.com/doc/current/security/remember_me.html #}
				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" class="mt-3" name="_remember_me">
						Se souvenir de moi
					</label>
				</div>

				<button class="btn btn-lg btn-primary my-3 d-block mx-auto" type="submit">
					Se connecter
				</button>
			</div>
		</div>
	</form>
{% endblock %}
