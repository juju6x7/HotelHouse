{% extends "base.html.twig" %}

{% block title %}Gestion des commandes
{% endblock %}

{% block body %}


	<h1 class="text-center my-4">Gestion des commandes</h1>


	<div class="row">
		<div class="col-11 mx-auto my-4">

				<div class="row">
						<div class="col-4">{{ form_row(form.id) }}</div>
				
			{{ form_start(form) }}
							{{ form_row(form.chambre) }}
							{{ form_row(form.dateArrival) }}
							{{ form_row(form.dateDeparture) }}
							{{ form_row(form.priceTotal) }}
							{{ form_row(form.firstname) }}
							{{ form_row(form.lastname) }}
							{{ form_row(form.email) }}
							{{ form_row(form.phone) }}
							{{ form_row(form.createdAt | date('d/m/Y') ) }}
							{{ form_row(form.updatedAt | date('d/m/Y') ) }}									
			{{ form_end(form) }}


		</div>
	</div>

{% endblock %}
