			<div class="col-4 mx-auto my-4">
				<img src=" {{ asset('uploads/' ~ chambre.photo) }}" width='300' height='200' alt="">
			</div>
		</div>

		<div class="row">
			<div class="col-4 mx-auto my-4">
				<a href="{{ path('commande_chambre', {'id': chambre.id}) }}" class="btn btn-primary">
