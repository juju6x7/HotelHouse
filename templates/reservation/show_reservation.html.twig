{% block body %}

	<h1 class="text-center my-4">Nos chambres</h1>


	{% for chambre in chambres %}

		<div class="row">
			<div class="col-4 mx-auto my-4 text-center">

				<h3>
					{{ chambre.title }}
				</h3>

				<h4>
					{{ chambre.descriptionShort }}
				</h4>

				{{ chambre.descriptionLong }}
