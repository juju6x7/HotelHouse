{% extends "base.html.twig" %}

{% block title %}Réserver une chambre - HouseHotel
{% endblock %}

{% block body %}
<br>
	<h3 class="text-center">Réserver une chambre</h3>
	<div class="row g-0">
		<div class="col-6 mx-auto">
			{{ form_start(form) }}
			<div class="row">
				<div class="col-6">{{ form_row(form.firstname) }}</div>
				<div class="col-6">{{ form_row(form.lastname) }}</div>
			</div>

			<div class="row">
				<div class="col-6">{{ form_row(form.phone) }}</div>
				<div class="col-6">{{ form_row(form.email) }}</div>
			</div>

			<div class="row">
				<div class="col-5 mx-auto">
					{{ form_row(form.dateArrival) }}
					{{ form_row(form.dateDeparture) }}
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
	<br>
{% endblock %}
